{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitLab Issue Template",
  "description": "Template for creating GitLab issues with gitlab-workflow",
  "type": "object",
  "properties": {
    "issueCode": {
      "type": "string",
      "description": "이슈코드 (e.g., 'VTM-1372', '1372', '1400')",
      "examples": ["VTM-1372", "1372", "1400"]
    },
    "asana": {
      "type": "string",
      "description": "[DEPRECATED] Use 'issueCode' instead. Legacy field for backward compatibility.",
      "examples": ["VTM-1372", "1372", "1400"]
    },
    "title": {
      "type": "string",
      "description": "GitLab issue title (required)",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Issue description (supports markdown, use \\n for newlines)"
    },
    "labels": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of label strings"
        },
        {
          "type": "string",
          "description": "Comma-separated label string"
        }
      ],
      "description": "Issue labels (array or comma-separated string)"
    },
    "push": {
      "type": "boolean",
      "description": "Auto-push branch to remote (default: false)",
      "default": false
    },
    "createBranch": {
      "type": "boolean",
      "description": "Create branch after issue creation (default: true)",
      "default": true
    }
  },
  "anyOf": [
    {"required": ["issueCode", "title"]},
    {"required": ["asana", "title"]}
  ],
  "additionalProperties": false
}
